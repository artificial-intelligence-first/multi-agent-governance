{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QAMAGResponse",
  "type": "object",
  "required": ["status", "findings"],
  "properties": {
    "status": {
      "type": "string",
      "enum": ["pass", "warn", "fail"]
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "result"],
        "properties": {
          "item": {"type": "string"},
          "result": {"type": "string"},
          "notes": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
