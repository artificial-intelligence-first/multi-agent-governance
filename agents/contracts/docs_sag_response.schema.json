{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://multi-agent-system.example.com/contracts/docs_sag_response.schema.json",
  "title": "DocsSAGResponse",
  "description": "Schema describing DocsSAG generated documentation payloads.",
  "type": "object",
  "required": [
    "id",
    "version",
    "doc_type",
    "title",
    "audience",
    "summary",
    "document_markdown",
    "sections",
    "review_notes",
    "follow_up_questions",
    "diagnostics"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Identifier propagated from the DocsSAG request."
    },
    "version": {
      "type": "string",
      "pattern": "^1\\.\\d+$",
      "description": "Contract version for the documentation response."
    },
    "doc_type": {
      "type": "string",
      "description": "Document type echoed from the request."
    },
    "title": {
      "type": "string",
      "description": "Title of the generated document."
    },
    "audience": {
      "oneOf": [
        {
          "type": "string"
        },
        {
          "type": "array",
          "items": {
            "type": "string"
          },
          "minItems": 1
        }
      ],
      "description": "Primary audience pulled from the request."
    },
    "summary": {
      "type": "string",
      "description": "High-level summary of the document contents."
    },
    "document_markdown": {
      "type": "string",
      "description": "Rendered Markdown document."
    },
    "sections": {
      "type": "array",
      "description": "Structured metadata for each generated section.",
      "items": {
        "type": "object",
        "required": ["heading", "sequence", "summary", "actions", "status"],
        "properties": {
          "heading": {
            "type": "string"
          },
          "sequence": {
            "type": "integer",
            "minimum": 1
          },
          "summary": {
            "type": "string"
          },
          "actions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "status": {
            "type": "string"
          },
          "knowledge_refs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "review_notes": {
      "type": "array",
      "description": "Editor-facing notes highlighting gaps or follow-ups.",
      "items": {
        "type": "string"
      }
    },
    "follow_up_questions": {
      "type": "array",
      "description": "Outstanding questions that must be answered to finalise the document.",
      "items": {
        "type": "string"
      }
    },
    "diagnostics": {
      "type": "object",
      "required": ["latency_ms", "confidence", "metrics"],
      "properties": {
        "latency_ms": {
          "type": "number",
          "minimum": 0
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "metrics": {
          "type": "object",
          "properties": {
            "docs_sag.latency_ms": {
              "type": "number"
            },
            "docs_sag.doc_type": {
              "type": "string"
            },
            "docs_sag.section_count": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
