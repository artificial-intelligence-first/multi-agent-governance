{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://multi-agent-governance.example.com/contracts/context_sag_response.schema.json",
  "title": "ContextSAGResponse",
  "description": "Schema describing ContextSAG responses containing prioritised context plans.",
  "type": "object",
  "required": [
    "id",
    "version",
    "objective",
    "primary_use_case",
    "context_briefs",
    "assembly_plan",
    "risk_register",
    "follow_up_questions",
    "diagnostics"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "version": {
      "type": "string"
    },
    "objective": {
      "type": "string"
    },
    "primary_use_case": {
      "type": "string"
    },
    "target_models": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "audience": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true
    },
    "context_briefs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "sequence", "summary", "inclusion"],
        "properties": {
          "name": {
            "type": "string"
          },
          "sequence": {
            "type": "integer",
            "minimum": 1
          },
          "type": {
            "type": "string"
          },
          "importance": {
            "type": "string"
          },
          "summary": {
            "type": "string"
          },
          "inclusion": {
            "type": "string",
            "enum": ["retain", "retain-trim", "defer"]
          },
          "recommended_actions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "assembly_plan": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["sequence", "step", "description"],
        "properties": {
          "sequence": {
            "type": "integer",
            "minimum": 1
          },
          "step": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "risk_register": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "follow_up_questions": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "diagnostics": {
      "type": "object",
      "required": ["latency_ms", "confidence", "metrics"],
      "properties": {
        "latency_ms": {
          "type": "number"
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "metrics": {
          "type": "object",
          "required": [
            "context_sag.latency_ms",
            "context_sag.context_count",
            "context_sag.risk_count"
          ],
          "properties": {
            "context_sag.latency_ms": {
              "type": "number"
            },
            "context_sag.context_count": {
              "type": "integer"
            },
            "context_sag.risk_count": {
              "type": "integer"
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
