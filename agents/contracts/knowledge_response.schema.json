{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://multi-agent-governance.example.com/contracts/knowledge_response.schema.json",
  "title": "KnowledgeResponse",
  "description": "Schema describing KnowledgeMag curated knowledge payloads.",
  "type": "object",
  "required": [
    "id",
    "version",
    "knowledge_domain",
    "title",
    "summary",
    "audience",
    "knowledge_cards",
    "source_index",
    "review_notes",
    "follow_up_questions",
    "diagnostics"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Identifier propagated from the knowledge request."
    },
    "version": {
      "type": "string",
      "pattern": "^1\\.\\d+$",
      "description": "Contract version for the knowledge response."
    },
    "knowledge_domain": {
      "type": "string",
      "description": "Domain of knowledge curated by the agent."
    },
    "title": {
      "type": "string",
      "description": "Title of the curated knowledge collection."
    },
    "summary": {
      "type": "string",
      "description": "High-level overview of the collection."
    },
    "audience": {
      "type": "array",
      "description": "Primary consumer groups for the knowledge collection.",
      "items": {
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "description": "Optional labels describing the collection.",
      "items": {
        "type": "string"
      }
    },
    "knowledge_cards": {
      "type": "array",
      "description": "Structured entries for each curated topic.",
      "items": {
        "type": "object",
        "required": [
          "topic",
          "sequence",
          "overview",
          "key_intents",
          "recommended_actions",
          "dependencies",
          "source_refs",
          "gaps"
        ],
        "properties": {
          "topic": {
            "type": "string"
          },
          "sequence": {
            "type": "integer",
            "minimum": 1
          },
          "overview": {
            "type": "string"
          },
          "key_intents": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "recommended_actions": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "dependencies": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "source_refs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "gaps": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "source_index": {
      "type": "array",
      "description": "Index of reference sources.",
      "items": {
        "type": "object",
        "required": ["id", "title", "uri", "type"],
        "properties": {
          "id": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "uri": {
            "type": "string",
            "format": "uri"
          },
          "type": {
            "type": "string"
          },
          "last_reviewed": {
            "type": ["string", "null"]
          }
        },
        "additionalProperties": false
      }
    },
    "review_notes": {
      "type": "array",
      "description": "Curation notes highlighting stale data, missing coverage, or required owners.",
      "items": {
        "type": "string"
      }
    },
    "follow_up_questions": {
      "type": "array",
      "description": "Outstanding questions that must be answered to complete the collection.",
      "items": {
        "type": "string"
      }
    },
    "diagnostics": {
      "type": "object",
      "required": ["latency_ms", "confidence", "metrics"],
      "properties": {
        "latency_ms": {
          "type": "number",
          "minimum": 0
        },
        "confidence": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        },
        "metrics": {
          "type": "object",
          "properties": {
            "knowledge.latency_ms": {
              "type": "number"
            },
            "knowledge.topic_count": {
              "type": "integer",
              "minimum": 0
            },
            "knowledge.source_count": {
              "type": "integer",
              "minimum": 0
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
